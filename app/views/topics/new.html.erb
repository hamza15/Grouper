<% if @topic.group %>
    <h1>New Topic for <%= @topic.group.title%>!</h1>
<% else %>
    <h1>New Topic!</h1>
<% end %>

<%= render partial: "layouts/errors", locals: {object: @topic} %>

<%= form_for([@topic.group,@topic]) do |f|%>

 <% if !@topic.group %>
  <%= f.label :group %>
  <%= f.collection_select :group_id, @groups, :id, :title %>
<% else %>
    <%= f.hidden_field :group_id %>
<% end %>

  <%= f.label :title %>
  <%= f.text_field :title %>


  <%= f.submit %>

<% end %>
