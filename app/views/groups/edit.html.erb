<h1>Edit <%= @group.title%>!</h1>

<%= render partial: "layouts/errors", locals: {object: @group} %>

<%= form_for(@group) do |f|%>

  <br>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br></br>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <br></br>
  <%= f.label :rules %>
  <%= f.text_area :rules %>
  <br></br>

  <%= f.submit %>

<% end %>