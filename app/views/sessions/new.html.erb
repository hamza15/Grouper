<h1>Login</h1>

<%= flash[:message] if flash[:message] %>
<br>
<br>

<%= form_for :user do |f| %>

    <%= f.label :email %>
    <%= f.email_field :email %>
    <br>
    <br>

    <%= f.label :password %>
    <%= f.password_field :password %>
    <br>
    <br>

    <h2><%= link_to 'Login via Github', '/auth/github', method: :post %></h2>

    <%= f.submit "Login"%>

<% end %>