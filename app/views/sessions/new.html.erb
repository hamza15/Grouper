<h1>Login</h1>

<%= flash[:message] if flash[:message] %>
<br>
<br>

<%= form_for :user do |f| %>

    <%= f.label :email %>
    <%= f.email_field :email %>
    <br>
    <br>

    <%= f.label :password %>
    <%= f.password_field :password %>
    <br>
    <br>

    <%= link_to "Login via Github", "/auth/github" %>

    <%= f.submit "Login"%>

<% end %>